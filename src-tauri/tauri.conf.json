{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tarkov Interactive Map Assistant",
  "version": "1.1.5",
  "identifier": "com.tomy.tarkov-map-assistant",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:8001",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tarkov Interactive Map Assistant",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "opener:default",
            "dialog:allow-open",
            "dialog:default",
            "fs:allow-read-dir",
            "fs:allow-exists",
            "fs:allow-read-text-file"
          ]
        }
      ]
    },
    "withGlobalTauri": true
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}